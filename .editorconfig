root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css,js,ts}]
indent_style = space
indent_size = 2

[*.php]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[site/templates/**.php]
indent_size = 2

[site/snippets/**.php]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc}]
indent_style = space
indent_size = 2
